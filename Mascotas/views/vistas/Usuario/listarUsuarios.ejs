<h1>Lista de usuarios</h1>

<div class="row">
	<div class="col-sm-9">
		<p>Aqui se listan todos los usuarios del sistema de mascotas</p>
	</div>
	<div class="col-sm-3">
		<a href="/CrearUsuario" class="btn btn-block btn-success">Crear Usuario</a>
	</div>
</div>



<% for(var i=0; i<usuarios.length;i++) {%>

	<div class="row ma-margen-top-bottom">
		<div class="col-sm-1"></div>
		<div class="col-sm-4 text-center ma-border ma-padding-top-bottom">
			<h1> <%= usuarios[i].apellidos%></h1>
		</div>
		<div class="col-sm-1"></div>

		<div class="col-sm-5 text-center ma-border" style="margin-top:30px">
			<p>
				<%= usuarios[i].apellidos%> <%= usuarios[i].nombres%>
			</p>
			<p>
				<%= usuarios[i].correo%>
			</p>
		</div>
		<div class="col-sm-1"></div>

		<div class="col-sm-1 ma-padding-top-bottom">
			<a href="/Usuario/borrarUsuario?id=<%= usuarios[i].id%>" class="btn btn-danger btn-block">X</a>
			<a href="/Usuario/editarUsuario?id=<%= usuarios[i].id%>" class="btn btn-info btn-block">Edit</a>

		</div>

	</div>



	<% }%>